@model IEnumerable<Group12_iCAREAPP.Models.iCAREWorker>

@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@* <h2>Index</h2> *@
<h2>iCARE Workers</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.profession)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.creatorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iCAREUser.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iCAREUser)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.profession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.creatorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iCAREUser.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
