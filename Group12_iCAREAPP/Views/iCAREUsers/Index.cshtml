@model IEnumerable<Group12_iCAREAPP.Models.iCAREUser>

@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>iCare Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            CreatorID
        </th>
        <th>
            Password
        </th>
        <th>
            Profession
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.iCAREWorker.creatorID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserPassword.password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.iCAREWorker.profession)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
